# TaxiPrice AI Environment Configuration

# Flask Configuration
FLASK_ENV=development
FLASK_APP=app.py
SECRET_KEY=your-secret-key-here

# Database Configuration
DATABASE_URL=sqlite:///taxiprice.db
# For PostgreSQL: postgresql://username:password@localhost/taxiprice

# Redis Configuration (optional)
REDIS_URL=redis://localhost:6379

# API Keys (optional)
WEATHER_API_KEY=your-weather-api-key
MAPS_API_KEY=your-maps-api-key
TRAFFIC_API_KEY=your-traffic-api-key

# Model Configuration
MODEL_UPDATE_INTERVAL=3600  # seconds
PREDICTION_CACHE_TTL=300    # seconds

# WebSocket Configuration
SOCKETIO_ASYNC_MODE=threading
SOCKETIO_CORS_ALLOWED_ORIGINS=*

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Frontend Configuration
REACT_APP_API_URL=http://localhost:5000
REACT_APP_SOCKET_URL=http://localhost:5000
REACT_APP_MAP_TILES_URL=https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png

# Production Settings (when FLASK_ENV=production)
GUNICORN_WORKERS=4
GUNICORN_BIND=0.0.0.0:5000
GUNICORN_TIMEOUT=30